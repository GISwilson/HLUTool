    <!--  ErrorTemplate  -->
    <ControlTemplate x:Key="ErrorTemplate">
        <DockPanel>
            <Grid DockPanel.Dock="Right">
                <Ellipse Width="12"
                         Height="12"
                         VerticalAlignment="Center"
                         Fill="Black"
                         Stroke="White"
                         StrokeThickness="0.5" />
                <TextBlock Margin="0"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="White"
                           Padding="4,0,0,0"
                           Text="!"
                           ToolTip="{Binding RelativeSource={RelativeSource Self},
                                             Path=(Validation.Errors).CurrentItem.ErrorContent}" />
            </Grid>
            <Border BorderBrush="White" BorderThickness="1">
                <AdornedElementPlaceholder />
            </Border>
        </DockPanel>
    </ControlTemplate>

    <ControlTemplate x:Key="DataGridValidationErrorTemplate">
        <Grid>
            <Ellipse Width="12"
                     Height="12"
                     VerticalAlignment="Center"
                     Fill="Black"
                     Stroke="White"
                     StrokeThickness="0.5" />
            <TextBlock Margin="0"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       Padding="4,0,0,0"
                       Text="!"
                       ToolTip="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                        AncestorType={x:Type tkit:DataGridRow}},
                                         Path=(Validation.Errors).CurrentItem.ErrorContent}"
                       Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type tkit:DataGridRow}},
                                            Path=(Validation.HasError),
                                            Converter={StaticResource bool2VisibilityConverter}}" />
        </Grid>
    </ControlTemplate>

    <!--  DataGridRow  -->
    <Style TargetType="{x:Type tkit:DataGridRow}">
        <Setter Property="ValidationErrorTemplate" Value="{StaticResource DataGridValidationErrorTemplate}" />
        <Style.Triggers>
